<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guilherme.taglivrosapp.AtividadeItemDescricao">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/descricao_capa"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/ic_launcher" />
        <TextView
            android:text="Título"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />
        <TextView
            android:id="@+id/descricao_titulo"
            android:text="Título"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />
        <TextView
            android:text="Autor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />
        <TextView
            android:id="@+id/descricao_autor"
            android:text="Autor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />
        <TextView
            android:text="Mês/Ano"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />
        <TextView
            android:id="@+id/descricao_mes_ano"
            android:text="Mês/Ano"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />

        <TextView
            android:text="Curador"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />
        <TextView
            android:id="@+id/descricao_curador"
            android:text="Curador"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />
        <TextView
            android:text="Páginas"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />
        <TextView
            android:id="@+id/descricao_paginas"
            android:text="Páginas"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />
        <TextView
            android:text="Avaliação TagLivros"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/descricao_tag_livros"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/e50" />
        <TextView
            android:id="@+id/descricao_tag_livros_valor"
            android:text="(n/5)"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textAlignment="center"/>
        <TextView
            android:text="Avaliação GoodRead"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />
        <ImageView
            android:id="@+id/descricao_good_read"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/e50" />
        <TextView
            android:text="(n/5)"
            android:id="@+id/descricao_good_read_valor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textAlignment="center"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
